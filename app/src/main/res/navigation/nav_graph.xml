<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startUpFragment">

    <fragment
        android:id="@+id/startUpFragment"
        android:name="com.aatec.bit.fragments.start_up.StartUpFragment"
        android:label="@string/blank"
        tools:layout="@layout/fragment_set_up">
        <action
            android:id="@+id/action_startUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aatec.bit.fragments.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/courseFragment"
        android:name="com.aatec.bit.fragments.course.CourseFragment"
        android:label="@string/courses"
        tools:layout="@layout/fragment_course" />
    <fragment
        android:id="@+id/noticeFragment"
        android:name="com.aatec.bit.fragments.notice.NoticeFragment"
        android:label="@string/notice"
        tools:layout="@layout/fragment_notice" />
    <fragment
        android:id="@+id/attendanceFragment"
        android:name="com.aatec.bit.fragments.attendance.AttendanceFragment"
        android:label="@string/attendance"
        tools:layout="@layout/fragment_attendance" />
    <dialog
        android:id="@+id/chooseSemBottomSheet"
        android:name="com.aatec.bit.fragments.start_up.choose_sem.ChooseSemBottomSheet"
        android:label="bottom_sheet_choose_sem"
        tools:layout="@layout/bottom_sheet_choose_sem">
        <action
            android:id="@+id/action_chooseSemBottomSheet_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="request"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="type"
            android:defaultValue="0"
            app:argType="integer" />
    </dialog>
    <action
        android:id="@+id/action_global_chooseSemBottomSheet"
        app:destination="@id/chooseSemBottomSheet" />
    <fragment
        android:id="@+id/noticeDetailFragment"
        android:name="com.aatec.bit.fragments.notice.description.NoticeDetailFragment"
        android:label="@string/blank"
        tools:layout="@layout/fragment_notice_detail">
        <argument
            android:name="path"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="bitapp-eng.github.io/notice/path={path}" />
        <action
            android:id="@+id/action_noticeDetailFragment_to_chooseImageBottomSheet"
            app:destination="@id/chooseImageBottomSheet" />

    </fragment>
    <action
        android:id="@+id/action_global_noticeDetailFragment"
        app:destination="@id/noticeDetailFragment" />
    <dialog
        android:id="@+id/chooseImageBottomSheet"
        android:name="com.aatec.bit.fragments.notice.choose_image.ChooseImageBottomSheet"
        android:label="@string/blank"
        tools:layout="@layout/bottom_sheet_choose_image">
        <argument
            android:name="notice"
            app:argType="com.aatec.core.data.ui.notice.SendNotice3" />
    </dialog>
    <fragment
        android:id="@+id/viewImageFragment"
        android:name="com.aatec.bit.fragments.view_image.ViewImageFragment"
        android:label=""
        tools:layout="@layout/fragment_view_image">
        <argument
            android:name="link"
            app:argType="string" />
        <argument
            android:name="title"
            android:defaultValue=" "
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_viewImageFragment"
        app:destination="@id/viewImageFragment" />

</navigation>