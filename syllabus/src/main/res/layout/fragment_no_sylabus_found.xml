<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/image_view_no_data"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/blank"
        android:src="@drawable/ic_no_data" />

    <TextView
        android:id="@+id/text_view_no_syllabus_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_no_data"
        android:layout_centerHorizontal="true"
        android:text="@string/no_syllabus_found"
        android:textAppearance="?attr/textAppearanceHeadline5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_no_syllabus_found"
        android:layout_centerHorizontal="true"
        android:text="@string/no_syllabus_found_subtitle"
        android:textAppearance="?attr/textAppearanceCaption" />
</RelativeLayout>