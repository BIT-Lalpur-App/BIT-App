<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_1"
        android:layout_marginTop="@dimen/grid_2"
        android:padding="@dimen/grid_1"
        android:text="@string/notice_notification"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />


    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_1"
        android:layout_marginTop="@dimen/grid_3"
        android:padding="@dimen/grid_1"
        android:text="@string/event_notification"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintTop_toBottomOf="@+id/switch_notice" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_1"
        android:layout_marginTop="@dimen/grid_3"
        android:padding="@dimen/grid_1"
        android:text="@string/app_notification"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintTop_toBottomOf="@+id/switch_event" />

</androidx.constraintlayout.widget.ConstraintLayout>